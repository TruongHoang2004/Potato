<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="720.0" prefWidth="1280.0" styleClass="background-02" stylesheets="@../style/Style.css" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.controller.HangmanGameController">
   <center>
      <StackPane prefHeight="720.0" prefWidth="1280.0">
         <children>
            <ImageView fitHeight="454.0" fitWidth="471.0" pickOnBounds="true" preserveRatio="true" StackPane.alignment="BOTTOM_CENTER">
               <image>
                  <Image url="@../image/icon/hangman.png" />
               </image>
            </ImageView>
            <Label alignment="CENTER" prefHeight="50.0" prefWidth="264.0" styleClass="header-label" text="Hangman Game" textAlignment="CENTER" StackPane.alignment="TOP_CENTER">
               <font>
                  <Font name="System Bold" size="30.0" />
               </font>
            </Label>
         </children>
      </StackPane>
   </center>
   <top>
      <HBox prefHeight="60.0" prefWidth="160.0" spacing="20.0" BorderPane.alignment="CENTER">
         <children>
            <Button mnemonicParsing="false" prefHeight="60.0" prefWidth="70.0" styleClass="utilButton1">
               <graphic>
                  <ImageView fitHeight="48.0" fitWidth="48.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../image/icon/sound.png" />
                     </image>
                  </ImageView>
               </graphic>
            </Button>
            <Button mnemonicParsing="false" prefHeight="60.0" prefWidth="70.0" styleClass="utilButton1">
               <graphic>
                  <ImageView fitHeight="48.0" fitWidth="48.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../image/icon/music.png" />
                     </image>
                  </ImageView>
               </graphic>
            </Button>
         </children>
         <BorderPane.margin>
            <Insets left="20.0" top="20.0" />
         </BorderPane.margin>
      </HBox>
   </top>
   <right>
      <StackPane prefWidth="50.0" BorderPane.alignment="CENTER" />
   </right>
   <left>
      <StackPane prefWidth="50.0" BorderPane.alignment="CENTER" />
   </left>
   <bottom>
      <HBox maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="80.0" prefWidth="340.0" spacing="80.0" BorderPane.alignment="CENTER">
         <BorderPane.margin>
            <Insets bottom="20.0" />
         </BorderPane.margin>
         <children>
            <Button mnemonicParsing="false" onAction="#startGame" prefHeight="80.0" prefWidth="130.0" styleClass="utilButton1" text="Start">
               <font>
                  <Font name="System Bold" size="22.0" />
               </font>
            </Button>
            <Button mnemonicParsing="false" onAction="#switchToGameMenu" prefHeight="80.0" prefWidth="130.0" styleClass="utilButton1" text="Quit">
               <font>
                  <Font name="System Bold" size="22.0" />
               </font>
            </Button>
         </children>
      </HBox>
   </bottom>
</BorderPane>
